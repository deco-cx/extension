{
  "manifest_version": 2,
  "name": "deco.cx extension",
  "description": "Get detailed information on sites powered by deco.cx",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "applications": {
    "gecko": {
      "id": "browser-extension@my-extension-id-email.com"
    }
  }
}